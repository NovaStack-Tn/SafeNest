# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=your-app-name.onrender.com,localhost

# Database (Auto-configured by Render via DATABASE_URL)
# For local development:
POSTGRES_DB=safenest
POSTGRES_USER=safenest
POSTGRES_PASSWORD=safenest
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis (Auto-configured by Render via REDIS_URL)
# For local development:
REDIS_HOST=localhost
CELERY_BROKER_URL=redis://localhost:6379/0

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-frontend-url.vercel.app,https://your-frontend-url.netlify.app

# AI API Keys (REQUIRED for AI features)
GEMINI_API_KEY=your-gemini-api-key-here
